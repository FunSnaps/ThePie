@model ThePie.Models.Poster

@{
  ViewData["Title"] = "Edit";
}

<body class="edit-comics-page">
  @*here*@
  <div>
    <div class="homeTitle animate__animated animate__backInUp">
      Something wrong?!
    </div>
    <div class="row editpage">
      <div class="col-md-4">
        <form asp-action="Edit">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
