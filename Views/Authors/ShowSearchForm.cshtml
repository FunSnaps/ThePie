@model ThePie.Models.Author

<body class="search-comics-page">

  <div class="homeTitle animate__animated animate__heartBeat">
    I spy with my little eye..
  </div>

  <div class="row">
    <div class="col-md-4">
      <form asp-action="ShowSearchResults">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          Author Name
          <label for="SearchName" class="control-label"></label>
          <input name="SearchName" class="form-control" />
        </div>
        <div class="form-group">
          Author Sex
          <label for="SearchSex" class="control-label"></label>
          @*<input name="SearchSex" class="form-control" />*@
          @Html.DropDownListFor(m => m.AuthorSex, new SelectList(Enum.GetValues(typeof(Author.Sex))), "Select Gender")
        </div>
        <div class="form-group">
          <input type="submit" value="Search" class="btn btn-success" />
        </div>
      </form>
    </div>
  </div>

  <p>
    <a asp-action="Index" class="btn btn-dark"> <i class="fas fa-hand-point-left"></i> &nbsp;Take a step back!</a>
  </p>
</body>