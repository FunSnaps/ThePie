@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
  ViewBag.Title = "All Roles";
}

<div class="homeTitle animate__animated animate__shakeY">
  Role management
</div>


@if (Model.Any())
{
  <a class="btn btn-success m-3" style="width:auto" asp-action="CreateRole"
     asp-controller="Admin">Add new role</a>

  foreach (var role in Model)
  {
    <div class="card mb-3">
      <div class="card-header">
        Role Id : @role.Id
      </div>
      <div class="card-body">
        <h5 class="card-title">@role.Name</h5>
      </div>
      <div class="card-footer">
        <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
          <a class="btn btn-primary" asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id">Edit</a>
          <span id="confirmDeleteSpan_@role.Id" style="display:none">
            <span>Are you sure you want to delete this user?</span>
            <button type="submit" class="btn btn-danger">Confirm</button>
            <a href="#" class="btn btn-primary" onclick="confirmDelete('@role.Id',false)">Cancel</a>
          </span>

          <span id="deleteSpan_@role.Id">
            <a href="#" class="btn btn-danger" onclick="confirmDelete('@role.Id',true)">Delete</a>
          </span>

        </form>
      </div>
    </div>
  }
}
else
{
  <div class="card">
    <div class="card-header">
      No roles created yet
    </div>
    <div class="card-body">
      <h5 class="card-title">
        Use the button below to create a role
      </h5>
      <a class="btn btn-primary" style="width:auto"
         asp-controller="Admin" asp-action="CreateRole">
        Create Role
      </a>
    </div>
  </div>
}

@section Scripts{
  <script src="~/js/ShowHideConfirmation.js"></script>
}